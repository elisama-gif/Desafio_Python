derrotas=empates=vitorias=0
derrotas=int(imput('Derrotas:'))
empates=int (imput ("Empates:"))
vitorias=int(imput("Vitorias:"))
pontos_ganhos=vitorias*3+empates
jogos=vitorias+derrotas+empates
print ("Quantidade de pontos ganhos:{}".format(pontos_ganhos))
print ("Quantidade de jogos dispoutado:{}".format (jogos))
